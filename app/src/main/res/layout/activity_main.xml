<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#607D8B"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:orientation="vertical">

        <ImageView
                    android:id="@+id/simpleImageView1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/logo"
                    android:layout_weight="0."/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/etNumDiv"
                    android:inputType="numberDecimal"
                    android:background="#00675B"
                    android:hint="1"
                    android:textSize="60dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
            />
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/simpleImageView3"
                        android:layout_width="10dp"
                        android:layout_height="80dp"
                        android:src="@drawable/imgban"
                        android:layout_weight="0.3"
                />
                <Spinner
                        android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/mndspinner1"
                    android:background="#BDBDBD"
                    android:layout_margin="10dp"/>
            </LinearLayout>


        <ImageView
                    android:id="@+id/simpleImageView2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/oo"
                    android:layout_weight="1"
        />
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                <ImageView
                        android:id="@+id/simpleImageView4"
                        android:layout_width="10dp"
                        android:layout_height="80dp"
                        android:src="@drawable/imgban"
                        android:layout_weight="0.3"

                />


            <Spinner
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/mndspinner2"
                    android:background="#BDBDBD"
                    android:layout_margin="10dp"
            />
            </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btconv"
                android:text="@string/bconv"
                android:background="#00675B"
                android:layout_margin="10dp"

            />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv1"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textColor="@color/white"

            />
        </LinearLayout>
    </LinearLayout>
</ScrollView>